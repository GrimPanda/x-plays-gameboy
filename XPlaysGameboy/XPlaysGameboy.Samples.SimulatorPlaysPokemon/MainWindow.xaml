<Window x:Class="XPlaysGameboy.Samples.SimulatorPlaysPokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Margin="5" BorderBrush="#FF3399FF" BorderThickness="5">
            <Grid  Name="GameboyArea" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        </Border>
        <ItemsControl Grid.RowSpan="2" Grid.Row="0" Width="300" Name="Log" Grid.Column="1" Margin="0,5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock TextWrapping="Wrap" Text="{Binding}" FontSize="20" Foreground="#FF303030"  Margin="10,5,10,5" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock Grid.Row="1" Margin="10,5,10,10"  Grid.Column="0" FontSize="20"  Foreground="#FF000000"  Text="Next slowdown in ..."  Name="SlowMotionCountdown" />
    </Grid>
</Window>
