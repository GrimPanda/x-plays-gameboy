<Window x:Class="XPlaysGameboy.Samples.SimulatorPlaysPokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid MinWidth="500" MinHeight="500"  Name="GameboyArea" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        <ItemsControl Width="200" Name="Log" Grid.Column="1" Margin="10,5,10,5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="20" Foreground="#FFAAAAAA"  Margin="10,5,10,5" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="10" FontSize="17"  Foreground="#FFFFFF"  Text="Next slowdown in ..."  Name="SlowMotionCountdown" />
    </Grid>
</Window>
